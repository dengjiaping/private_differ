<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/topic_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_gradient_reserve"/>

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="这里是专题名称"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/topic_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/topic_title"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="2017-03-11"
        android:textColor="@color/white_alpha_50"
        android:textSize="15sp"/>


</RelativeLayout>