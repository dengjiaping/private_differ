<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tool="http://schemas.android.com/tools"
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_gradient_reserve2"/>

    <TextView
        android:id="@+id/banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="22sp"
        tool:text="如何踏上超神之路"/>

    <TextView
        android:id="@+id/game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/white_alpha_50"
        android:textSize="12sp"
        tool:text="游戏名称"/>

    <View
        android:id="@+id/line_left"
        android:layout_width="22dp"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/game_name"
        android:layout_below="@+id/banner_title"
        android:layout_marginRight="4.5dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/game_name"
        android:background="@color/white_alpha_50"
        android:visibility="gone"/>

    <View
        android:id="@+id/line_right"
        android:layout_width="22dp"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/game_name"
        android:layout_below="@+id/banner_title"
        android:layout_marginLeft="4.5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/game_name"
        android:background="@color/white_alpha_50"
        android:visibility="gone"/>

</RelativeLayout>