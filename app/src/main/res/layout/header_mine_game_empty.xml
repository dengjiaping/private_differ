<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_image_color">

    <com.appgame.differ.widget.CustomEmptyView
        android:id="@+id/empty_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="45dp"/>

    <TextView
        android:id="@+id/recom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_view_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:text="游戏推荐"
        android:textColor="@color/black_alpha_80"
        android:textSize="16sp"/>

</RelativeLayout>
