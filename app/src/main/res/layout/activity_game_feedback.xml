<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_game_feedback"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".module.game.GameFeedbackActivity">

    <include layout="@layout/bar_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="27dp"/>

            <EditText
                android:id="@+id/edit_comm"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/bg_frame_gray_corner_3"
                android:gravity="left|top"
                android:hint="请输入您遇到的问题或建议"
                android:maxLength="200"
                android:padding="11dp"
                android:textColor="@color/black_alpha_40"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/btn_comment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_green_corner_click"
                android:gravity="center"
                android:text="提交反馈"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
