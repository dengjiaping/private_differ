<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/user_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <com.appgame.differ.widget.CircleImageView
                    android:id="@+id/user_header"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_header"
                    android:text="觉得可垃圾"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tag_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bg_frame_gray_corner"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="打开连接"
                    android:textColor="@color/black_alpha_50"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/differ_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tag_num"
                android:layout_below="@+id/user_layout"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="3dp"
                android:text="立刻就打了快到家啊；领导看见阿德里克； 的徕卡就是的徕卡"
                android:textColor="@color/font_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tag_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_game_label"
                android:layout_toLeftOf="@+id/comment_num"
                android:text="122"/>

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_game_comment"
                android:layout_alignBottom="@+id/tag_num"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="122"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/differ_card"
        android:layout_width="128dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/differ_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>


</RelativeLayout>
