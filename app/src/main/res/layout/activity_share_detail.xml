<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:paddingLeft="21dp"
            android:text="分享到站内"
            android:textColor="@color/black_alpha_80"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/share_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/share_dynamic_click"
            android:gravity="center"
            android:text="我的动态"
            android:textColor="@color/black_alpha_60"
            android:textSize="11sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:paddingLeft="21dp"
            android:text="分享到站外"
            android:textColor="@color/black_alpha_80"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/share_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_card_click"
                    android:gravity="center"
                    android:text="卡片"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/share_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_wechat_click"
                    android:gravity="center"
                    android:text="微信好友"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/share_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_wechatmoments_click"
                    android:gravity="center"
                    android:text="微信朋友圈"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/share_qzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_qzone_click"
                    android:gravity="center"
                    android:text="QQ空间"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/share_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_qq_click"
                    android:gravity="center"
                    android:text="QQ好友"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/share_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_weibo_click"
                    android:gravity="center"
                    android:text="新浪微博"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/share_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="21dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/share_line_click"
                    android:gravity="center"
                    android:text="复制链接"
                    android:textColor="@color/black_alpha_60"
                    android:textSize="11sp" />
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>