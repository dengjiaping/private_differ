<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="签名"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2.5dp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/black_alpha_50"
        android:textSize="14sp"
        tool:text="快乐仗剑，情暖江湖！重拾难忘江湖情怀，再绘青春武侠画卷！快乐武侠，逍遥江湖！"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:background="#7f979797"/>

    <RelativeLayout
        android:id="@+id/approve_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="认证"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/approve_icon"
            android:layout_width="16.9dp"
            android:layout_height="16.9dp"
            android:layout_below="@+id/approve"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/differ_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/approve"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/approve_icon"
            android:textColor="#FF1FC3CA"
            android:textSize="13sp"
            tool:text="differ运营喵"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:background="#7f979797"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/badge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="徽章"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/badge_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/badge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/arrow_img"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:layout_marginTop="14dp"
        android:background="#7f979797"/>

    <TextView
        android:id="@+id/msg_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="0条留言"
        android:textColor="@color/black_alpha_50"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/empty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="空虚寂寞冷，谁来温暖TA？"
        android:textColor="@color/black_alpha_50"
        android:textSize="18sp"
        android:visibility="gone"/>
</LinearLayout>